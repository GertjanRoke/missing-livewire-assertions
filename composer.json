{
    "name": "christophrumpel/missing_livewire_assertions",
    "description": "This package adds missing livewire test assertions.",
    "keywords": [
        "christophrumpel",
        "laravel",
        "missing_livewire_assertions"
    ],
    "homepage": "https://github.com/christophrumpel/missing_livewire_assertions",
    "license": "MIT",
    "authors": [
        {
            "name": "Christoph Rumpel",
            "email": "christoph@christoph-rumpel.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^8.0"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "livewire/livewire": "^2.4",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Christophrumpel\\MissingLivewireAssertions\\": "src",
            "Christophrumpel\\MissingLivewireAssertions\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Christophrumpel\\MissingLivewireAssertions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Christophrumpel\\MissingLivewireAssertions\\MissingLivewireAssertionsServiceProvider"
            ],
            "aliases": {
                "MissingLivewireAssertions": "Christophrumpel\\MissingLivewireAssertions\\MissingLivewireAssertionsFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
